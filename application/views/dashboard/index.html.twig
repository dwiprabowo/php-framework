{% extends 'template/twbs_bootstrap.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block content %}
    {% include 'template/partial/navbar.html.twig' %}

    <div class="container">
        <form method="post">
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-12">
                        {% if interval %}
                            {{ d(interval) }}
                        {% endif %}
                    </div>
                    <div class="col-xs-6">
                        <input 
                            type="text" 
                            name="start" 
                            class="form-control datepicker" 
                            label="Start" 
                            id="start"
                            value="{{ set_value('start') }}" 
                        >
                    </div>
                    <div class="col-xs-6">
                        <input 
                            type="text" 
                            name="end" 
                            class="form-control datepicker" 
                            label="End" 
                            id="end"
                            value="{{ set_value('end') }}" 
                        >
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Compare" class="btn btn-block">
            </div>
        </form>
    </div>
{% endblock %}

{% block script %}
    <script>
        $(".datepicker").datepicker({todayHighlight: true, autoclose: true});
    </script>
{% endblock %}
