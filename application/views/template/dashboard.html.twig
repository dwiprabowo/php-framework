{% extends 'template/twbs_bootstrap.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block style %}
    <style>
        .dashboard-items{
            margin: 10px;
            width: 72px;
            height: 72px;
        }
        .dashboard-items .wrapper{
            display: table;
            text-align: center;
            width: 100%;
            height: 100%;
        }
        .dashboard-items .content{
            display: table-cell;
            vertical-align: middle;
            width: 100%;
            height: 100%;
        }
        .dashboard-items i.fa{
            font-size: 3em;
        }

        div.dashboard-users a:hover{
            text-decoration: none !important;
        }

        .side-nav.affix{
            width: 230px;
        }

        @media (min-width: 768px){
            .dashboard-items{
                width: 108px;
                height: 108px;
            }
            .dashboard-items i.fa{
                font-size: 4em;
            }
        }
    </style>
{% endblock %}

{% block content %}
    {% include 'template/partial/navbar.html.twig' %}

    <div class="container" style="padding-top: 80px;">
        <div class="row row-offcanvas row-offcanvas-right">
            <div class="col-xs-12 col-md-9">
                <div class="jumbotron">
                    <div>
                        <ol class="breadcrumb">
                            {% block dashboard_breadcrumb %}{% endblock %}
                        </ol>
                    </div>
                    {% block dashboard_content %}{% endblock %}
                </div>
            </div>
            <div class="col-md-3 sidebar-offcanvas hidden-sm hidden-xs" id="sidebar">
                <div class="side-nav list-group affix">
                    <a 
                        href="{{ site_url('dashboard/users') }}" 
                        class="list-group-item {{ 
                            class_active('dashboard/users', true)|raw 
                        }}"
                    >
                        {{ t('common_users') }}
                    </a>
                    <a 
                        href="{{ site_url('dashboard/web_api') }}" 
                        class="list-group-item {{ 
                            class_active('dashboard/web_api', true)|raw 
                        }}"
                    >
                        {{ t('common_web_api') }}
                    </a>
                    <a 
                        href="{{ site_url('dashboard/data_moderation') }}" 
                        class="list-group-item {{ 
                            class_active('dashboard/data_moderation', true)|raw 
                        }}"
                    >
                        {{ t('common_data_moderation') }}
                    </a>
                    <a 
                        href="https://drive.google.com/file/d/0B2z9x0nzjPJtSnA0b2NBRmJ4dzQ/view?usp=sharing" 
                        target="_blank" 
                        class="list-group-item"
                    >
                        Android Client
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}