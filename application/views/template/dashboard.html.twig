{% extends 'template/twbs_bootstrap.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block style %}
    <style>
        .dashboard-items{
            margin: 10px;
            width: 72px;
            height: 72px;
        }
        .dashboard-items .wrapper{
            display: table;
            text-align: center;
            width: 100%;
            height: 100%;
        }
        .dashboard-items .content{
            display: table-cell;
            vertical-align: middle;
            width: 100%;
            height: 100%;
        }
        .dashboard-items i.fa{
            font-size: 3em;
        }

        div.dashboard-users a:hover{
            text-decoration: none !important;
        }

        @media (min-width: 768px){
            .dashboard-items{
                width: 108px;
                height: 108px;
            }
            .dashboard-items i.fa{
                font-size: 4em;
            }
        }
    </style>
{% endblock %}

{% block content %}
    {% include 'template/partial/navbar.html.twig' %}

    <div class="container">
        <div class="row row-offcanvas row-offcanvas-right">
            <div class="col-xs-12 col-lg-9">
                <div class="jumbotron">
                    <div>
                        <ol class="breadcrumb">
                            {% block dashboard_breadcrumb %}{% endblock %}
                        </ol>
                    </div>
                    {% block dashboard_content %}{% endblock %}
                </div>
            </div>
            <div class="col-xs-6 col-lg-3 sidebar-offcanvas" id="sidebar">
                <div class="list-group">
                    <a 
                        href="{{ site_url('dashboard/users') }}" 
                        class="list-group-item {{ 
                            class_active('dashboard/users', true)|raw 
                        }}"
                    >
                        {{ t('common_users') }}
                    </a>
                    <a 
                        href="{{ site_url('dashboard/settings') }}" 
                        class="list-group-item {{ 
                            class_active('dashboard/settings', true)|raw 
                        }}"
                    >
                        {{ t('common_settings') }}
                    </a>
                    <a 
                        href="{{ site_url('dashboard/activities') }}" 
                        class="list-group-item {{ 
                            class_active('dashboard/activities', true)|raw 
                        }}"
                    >
                        {{ t('common_activities') }}
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}